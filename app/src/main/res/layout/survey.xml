<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="4dp"
    tools:context=".survey">


    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/survey_heading"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:height="55dp"
        android:background="@drawable/editext_round2"
        android:hint="Heading"
        android:inputType="textCapWords"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp" />

    <EditText
        android:id="@+id/survey_description"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/survey_heading"
        android:layout_marginTop="8dp"
        android:background="@drawable/editext_round2"
        android:hint="Description"
        android:inputType="textCapSentences"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp" />

    <RelativeLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/survey_description"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/like"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:src="@drawable/like_green" />

            <TextView
                android:id="@+id/like_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/like"
                android:fontFamily="sans-serif-condensed"
                android:text="Yes"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="11sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@id/rl1"
            android:layout_toRightOf="@id/rl1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dislike"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:src="@drawable/dislike_red" />

            <TextView
                android:id="@+id/dislike_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dislike"
                android:layout_alignEnd="@id/dislike"
                android:layout_alignRight="@id/dislike"
                android:fontFamily="sans-serif-condensed"
                android:text="No"
                android:textAlignment="center"
                android:textColor="@color/Red"
                android:textSize="11sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/say"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/cant_say" />

            <TextView
                android:id="@+id/say_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/say"
                android:fontFamily="sans-serif-condensed"
                android:text="Can't Say"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="11sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>

    <EditText
        android:id="@+id/survey_wut"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/ll2"
        android:layout_marginTop="10dp"
        android:background="@drawable/editext_round2"
        android:enabled="false"
        android:hint="@string/survey_hint"
        android:inputType="textCapSentences"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp" />

    <ImageView
        android:id="@+id/submit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/submit" />

    <CheckBox
        android:id="@+id/inc_yn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/survey_wut"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/yesnobutton"
        android:textColor="@color/grey" />

    <CheckBox
        android:id="@+id/inc_say"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inc_yn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/cant_saybuttom"
        android:textColor="@color/grey" />

    <CheckBox
        android:id="@+id/inc_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inc_say"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/wut_field"
        android:textColor="@color/grey" />

    <CheckBox
        android:id="@+id/field_necessary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inc_field"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/wut_nec"
        android:textColor="@color/grey" />


</RelativeLayout>