<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="75dp"
   android:layout_gravity="center_horizontal"
   android:layout_marginStart="2dp"
   android:layout_marginEnd="2dp"
   android:foreground="?android:attr/selectableItemBackground"
   app:cardBackgroundColor="@color/dialogColor"
   app:cardCornerRadius="4dp"
   app:cardElevation="1.5dp"
   app:cardMaxElevation="1.5dp"
   app:cardPreventCornerOverlap="false"
   app:cardUseCompatPadding="true">

   <RelativeLayout
      android:id="@+id/rl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <ImageView
         android:id="@+id/book"
         android:layout_width="60dp"
         android:layout_height="70dp"
         android:layout_alignParentStart="true"
         android:layout_marginBottom="1dp"
         android:src="@drawable/open" />

      <RelativeLayout
         android:id="@+id/rltxt"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_marginBottom="1dp"
         android:layout_toEndOf="@id/book"
         android:gravity="center_vertical"
         android:layout_marginEnd="5dp"
         android:layout_marginStart="3dp">

         <TextView
            android:id="@+id/upperText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:maxLines="1"
            android:text="This Is Me and "
            android:textColor="@color/headingText"
            android:textSize="16sp" />

         <TextView
            android:id="@+id/lowertext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upperText"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed-light"
            android:maxLines="2"
            android:text="Lower Text"
            android:textColor="@color/subHeadingText"
            android:textSize="15sp" />


      </RelativeLayout>

      <View
         android:id="@+id/progress"
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_alignParentBottom="true"
         android:layout_gravity="bottom"
         android:background="#64DD17"
         android:visibility="visible" />

   </RelativeLayout>
</androidx.cardview.widget.CardView>