<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".main">

    <ImageView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:scaleX="1.2"
        android:scaleY="1.25"
        android:src="@drawable/main" />

    <Button
        android:id="@+id/surveyButton"
        android:layout_width="160dp"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main"
        android:paddingStart="35dp"
        android:drawablePadding="-25dp"
        android:drawableLeft="@drawable/survey"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/editext_round1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_centerHorizontal="true"
        android:text="Survey"
        android:drawableStart="@drawable/survey"
        android:paddingLeft="35dp" />

    <Button
        android:id="@+id/view_survey"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/surveyButton"
        android:fontFamily="sans-serif-condensed"
        android:paddingStart="45dp"
        android:drawablePadding="-35dp"
        android:drawableLeft="@drawable/list"
        android:paddingLeft="45dp"
        android:drawableStart="@drawable/list"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:background="@drawable/round_bluegrey"
        style="?android:attr/borderlessButtonStyle"
        android:text="View" />

    <Button
        android:id="@+id/im"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_below="@id/view_survey"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:paddingStart="20dp"
        android:drawablePadding="-10dp"
        android:drawableLeft="@drawable/message"
        android:paddingLeft="20dp"
        android:drawableStart="@drawable/message"
        android:textStyle="bold"
        android:background="@drawable/round_green"
        style="?android:attr/borderlessButtonStyle"
        android:text="Instant Msg"
         />

    <Button
        android:id="@+id/subs"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/im"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:paddingStart="15dp"
        android:drawablePadding="-10dp"
        android:drawableLeft="@drawable/aler"
        android:paddingLeft="15dp"
        android:drawableStart="@drawable/aler"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/round_blue"
        style="?android:attr/borderlessButtonStyle"
        android:text="Subscription" />

    <ImageView
        android:id="@+id/admin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="2dp"
        android:tint="@color/bluegrey"
        android:src="@drawable/admin"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>