<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="2dp"
        android:paddingLeft="2dp"
        android:paddingTop="5dp"
        android:paddingEnd="2dp"
        tools:context=".subs">


        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#2a3f48"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Set Notifications For Events"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/bFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/heading"
                    android:layout_marginTop="10dp"
                    android:layout_toStartOf="@id/text12"
                    android:layout_toLeftOf="@id/text12"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Off  "
                    android:textColor="@color/Red"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/bFood"
                    android:layout_alignBottom="@id/bFood"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:text="Breakfast"
                    android:textColor="@color/grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/bfoodtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_below="@id/bFood"
                    android:textColor="#898989" />

                <TextView
                    android:id="@+id/text12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/bFood"
                    android:layout_alignBottom="@id/bFood"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center_vertical"
                    android:text="On"
                    android:textColor="@color/green"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/lFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bFood"
                    android:layout_alignStart="@+id/bFood"
                    android:layout_alignLeft="@+id/bFood"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Off  "
                    android:textColor="@color/Red"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/lFood"
                    android:layout_alignBottom="@id/lFood"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:text="Lunch"
                    android:textColor="@color/grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lfoodtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_below="@id/lFood"
                    android:textColor="#898989" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/lFood"
                    android:layout_alignBottom="@id/lFood"
                    android:layout_toEndOf="@id/lFood"
                    android:layout_toRightOf="@id/lFood"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center_vertical"
                    android:text="On"
                    android:textColor="@color/green"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/dFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lFood"
                    android:layout_alignStart="@+id/bFood"
                    android:layout_alignLeft="@+id/bFood"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Off  "
                    android:textColor="@color/Red"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/dFood"
                    android:layout_alignBottom="@id/dFood"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:text="Dinner"
                    android:textColor="@color/grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/dfoodtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_below="@id/dFood"
                    android:textColor="#898989" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/dFood"
                    android:layout_alignBottom="@id/dFood"
                    android:layout_toEndOf="@id/dFood"
                    android:layout_toRightOf="@id/dFood"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center_vertical"
                    android:text="On"
                    android:textColor="@color/green"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/sTimeTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dFood"
                    android:layout_alignStart="@+id/bFood"
                    android:layout_alignLeft="@+id/bFood"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Off  "
                    android:textColor="@color/Red"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/sTimeTable"
                    android:layout_alignBottom="@id/sTimeTable"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:text="Time Table"
                    android:textColor="@color/grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sTimeTable"
                    android:fontFamily="sans-serif"
                    android:textColor="#898989" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/sTimeTable"
                    android:layout_alignBottom="@id/sTimeTable"
                    android:layout_toEndOf="@id/sTimeTable"
                    android:layout_toRightOf="@id/sTimeTable"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center_vertical"
                    android:text="On"
                    android:textColor="@color/green"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/holiday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sTimeTable"
                    android:layout_alignStart="@+id/bFood"
                    android:layout_alignLeft="@+id/bFood"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Off  "
                    android:textColor="@color/Red"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/holiday"
                    android:layout_alignBottom="@id/holiday"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:text="Holiday"
                    android:textColor="@color/grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hdtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/holiday"
                    android:fontFamily="sans-serif"
                    android:textColor="#898989" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/holiday"
                    android:layout_alignBottom="@id/holiday"
                    android:layout_toEndOf="@id/holiday"
                    android:layout_toRightOf="@id/holiday"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center_vertical"
                    android:text="On"
                    android:textColor="@color/green"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hdtext"
                    android:layout_marginTop="10dp"
                    android:background="@color/green"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#223239"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="sans-serif-condensed"
                        android:padding="5dp"
                        android:text="@string/note"
                        android:textAlignment="center"
                        android:textColor="@color/orange"
                        android:layout_marginStart="5dp" />

                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv"
            app:cardBackgroundColor="#2a3f48"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/heading1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Subscribe To Events"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/heading1"
                    android:layout_marginTop="10dp"
                    android:layout_toStartOf="@id/text3"
                    android:layout_toLeftOf="@id/text3"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Off  "
                    android:textColor="@color/Red"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/im"
                    android:layout_alignBottom="@id/im"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:text="Instant Messages"
                    android:textColor="@color/grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/imtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_below="@id/im"
                    android:textColor="#898989" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/im"
                    android:layout_alignBottom="@id/im"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center_vertical"
                    android:text="On"
                    android:textColor="@color/green"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/survey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/im"
                    android:layout_alignStart="@+id/im"
                    android:layout_alignLeft="@+id/im"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Off  "
                    android:textColor="@color/Red"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/survey"
                    android:layout_alignBottom="@id/survey"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:text="WUT"
                    android:textColor="@color/grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/surveytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_below="@id/survey"
                    android:textColor="#898989" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/survey"
                    android:layout_alignBottom="@id/survey"
                    android:layout_toEndOf="@id/survey"
                    android:layout_toRightOf="@id/survey"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center_vertical"
                    android:text="On"
                    android:textColor="@color/green"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/surveytext"
                    android:layout_marginTop="10dp"
                    android:background="@color/skyblue"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/v1"
                        android:layout_toRightOf="@id/v1"
                        android:padding="5dp"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:background="#223239"
                        android:text="@string/imandwut"
                        android:textAlignment="center"
                        android:textColor="@color/orange"
                        android:layout_marginStart="5dp" />

                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>

</ScrollView>

