<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="18dp"
        app:cardElevation="16dp"
        app:cardUseCompatPadding="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/photo"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/wut"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginRight="8dp" />

                    <View
                        android:layout_below="@id/photo"
                        android:id="@+id/v3"
                        android:layout_width="match_parent"
                        android:background="@color/lightgrey"
                        android:layout_height="0.5dp"/>

                    <TextView
                        android:id="@+id/heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif-smallcaps"
                        android:maxLines="2"
                        android:layout_marginTop="2dp"
                        android:textColor="#2f6699"
                        android:layout_below="@id/v3"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="Book Name"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginStart="10dp"
                        android:layout_below="@id/heading"
                        android:textColor="@color/darkGrey"
                        android:layout_marginEnd="10dp"
                        android:text="Description: "
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:layout_below="@id/description"

                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginStart="12dp"
                        android:paddingEnd="6dp"
                        android:paddingStart="6dp"
                        android:text="Hi Ther This Is A Description box of fancy dialog in my app and this is also my favourite app development in recent years i will not forget."
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginLeft="16dp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_below="@id/desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkGrey"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginStart="10dp"

                        android:text="Date: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="16dp" />

                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_toEndOf="@id/date"
                        android:layout_alignTop="@id/date"
                        android:text="7-Sep-2017 5:30 PM"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_toRightOf="@id/date" />

                    <View
                        android:layout_below="@id/date_text"
                        android:id="@+id/v2"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="6dp"
                        android:background="@color/lightgrey"
                        android:layout_height="0.5dp"/>

                    <RelativeLayout
                        android:id="@+id/ll2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v2"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:id="@+id/rl1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp">

                            <ImageView
                                android:id="@+id/like"
                                android:layout_marginTop="3dp"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/like" />

                            <TextView
                                android:id="@+id/like_text"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:layout_below="@id/like"
                                android:textColor="@color/darkGrey"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Yes"
                                android:textSize="11sp"
                                android:textStyle="bold" />


                            <ImageView
                                android:id="@+id/dislike"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@id/like"
                                android:layout_toRightOf="@id/like"
                                android:src="@drawable/dislike" />

                            <TextView
                                android:id="@+id/dislike_text"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/dislike"
                                android:fontFamily="sans-serif-condensed"
                                android:text="No"
                                android:textColor="@color/darkGrey"
                                android:textAlignment="center"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:layout_alignRight="@id/dislike"
                                android:layout_alignEnd="@id/dislike" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="50dp"
                            android:id="@+id/ll1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="20dp">

                            <ImageView
                                android:id="@+id/say"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/can_say" />

                            <TextView
                                android:id="@+id/say_text"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/say"
                                android:textAlignment="center"
                                android:textColor="@color/darkGrey"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Can't Say"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/survey_wut"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:inputType="textCapSentences|textMultiLine"
                        android:hint="@string/survey_hint"
                        android:layout_below="@id/ll2"
                        android:visibility="visible"
                        android:background="@drawable/editext_round2"
                        android:paddingStart="10dp"
                        android:paddingEnd="5dp"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp" />

                    <View
                        android:layout_below="@id/survey_wut"
                        android:id="@+id/v1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="4dp"
                        android:background="@color/lightgrey"
                        android:layout_height="0.5dp"/>

                    <Button
                        android:id="@+id/pBtn"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@id/v1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/editext_round1"
                        android:text="Vote"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp" />

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="50dp"
                        android:layout_alignTop="@id/pBtn"
                        android:layout_below="@id/v1"
                        android:layout_marginBottom="10dp"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                        android:theme="@style/RedAccent"
                        android:layout_marginStart="65dp" />


                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>