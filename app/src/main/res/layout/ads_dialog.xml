<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@android:color/transparent"
   android:orientation="vertical">

   <androidx.cardview.widget.CardView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      app:cardBackgroundColor="@color/dialogColor"
      app:cardCornerRadius="@dimen/_10sdp"
      app:cardElevation="@dimen/_16sdp"
      app:cardUseCompatPadding="true">

      <ScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
               android:id="@+id/heading"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_5sdp"
               android:fontFamily="sans-serif-light"
               android:paddingStart="@dimen/_10sdp"
               android:paddingEnd="@dimen/_10sdp"
               android:text=""
               android:textColor="@color/skyBlue"
               android:textSize="@dimen/_12ssp" />

            <TextView
               android:id="@+id/description"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/heading"
               android:layout_marginStart="@dimen/_10sdp"
               android:layout_marginEnd="@dimen/_10sdp"
               android:fontFamily="sans-serif"
               android:text="Description: "
               android:textColor="@color/headingText"
               android:textSize="@dimen/_11ssp"/>

            <TextView
               android:id="@+id/desc"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/description"
               android:layout_marginStart="@dimen/_12sdp"
               android:fontFamily="sans-serif-light-condensed"
               android:textColor="@color/subHeadingText"
               android:textSize="@dimen/_11ssp"
               android:textStyle="normal" />

            <TextView
               android:id="@+id/admin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/desc"
               android:layout_marginStart="@dimen/_10sdp"
               android:fontFamily="sans-serif"
               android:text="By: "
               android:textColor="@color/headingText"
               android:textSize="@dimen/_11ssp" />

            <TextView
               android:id="@+id/admin_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignTop="@id/admin"
               android:layout_toEndOf="@id/admin"
               android:fontFamily="sans-serif-condensed"
               android:textColor="@color/subHeadingText"
               android:textSize="@dimen/_11ssp"
               android:textStyle="normal" />

            <TextView
               android:id="@+id/date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/admin"
               android:layout_marginStart="@dimen/_10sdp"
               android:fontFamily="sans-serif-condensed"
               android:text="Date: "
               android:textColor="@color/headingText"
               android:textSize="@dimen/_11ssp" />

            <TextView
               android:id="@+id/date_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignTop="@id/date"
               android:layout_toEndOf="@id/date"
               android:fontFamily="sans-serif-condensed"
               android:textColor="@color/subHeadingText"
               android:textSize="@dimen/_11ssp"
               android:textStyle="normal" />

            <View
               android:id="@+id/v2"
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:layout_below="@id/date_text"
               android:layout_marginStart="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_6sdp"
               android:layout_marginEnd="@dimen/_10sdp"
               android:background="@color/subHeadingText" />

            <RelativeLayout
               android:id="@+id/ll2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/v2"
               android:layout_marginStart="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_2sdp">

               <RelativeLayout
                  android:id="@+id/rl1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/_5sdp">

                  <ImageView
                     android:id="@+id/likeImg"
                     android:layout_width="@dimen/_40sdp"
                     android:layout_height="@dimen/_40sdp"
                     android:layout_marginTop="@dimen/_3sdp"
                     android:src="@drawable/like" />

                  <TextView
                     android:id="@+id/like_text"
                     android:layout_width="@dimen/_40sdp"
                     android:layout_height="wrap_content"
                     android:layout_below="@id/likeImg"
                     android:fontFamily="sans-serif-condensed"
                     android:text="Yes"
                     android:textAlignment="center"
                     android:textColor="@color/headingText"
                     android:textSize="@dimen/_10ssp" />


                  <ImageView
                     android:id="@+id/dislikeImg"
                     android:layout_width="@dimen/_40sdp"
                     android:layout_height="@dimen/_40sdp"
                     android:layout_marginStart="@dimen/_15sdp"
                     android:layout_marginTop="@dimen/_3sdp"
                     android:layout_toEndOf="@id/likeImg"
                     android:src="@drawable/dislike" />

                  <TextView
                     android:id="@+id/dislike_text"
                     android:layout_width="@dimen/_40sdp"
                     android:layout_height="wrap_content"
                     android:layout_below="@id/dislikeImg"
                     android:layout_alignEnd="@id/dislikeImg"
                     android:fontFamily="sans-serif-condensed"
                     android:text="No"
                     android:textAlignment="center"
                     android:textColor="@color/headingText"
                     android:textSize="@dimen/_10ssp" />

               </RelativeLayout>

               <RelativeLayout
                  android:id="@+id/ll1"
                  android:layout_width="@dimen/_45sdp"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_marginEnd="@dimen/_20sdp">

                  <ImageView
                     android:id="@+id/sayImg"
                     android:layout_width="@dimen/_45sdp"
                     android:layout_height="@dimen/_45sdp"
                     android:src="@drawable/can_say" />

                  <TextView
                     android:id="@+id/say_text"
                     android:layout_width="@dimen/_45sdp"
                     android:layout_height="wrap_content"
                     android:layout_below="@id/sayImg"
                     android:fontFamily="sans-serif-condensed"
                     android:text="Can't Say"
                     android:textAlignment="center"
                     android:textColor="@color/headingText"
                     android:textSize="@dimen/_10ssp" />
               </RelativeLayout>

            </RelativeLayout>

            <EditText
               android:id="@+id/survey_wut"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:minHeight="@dimen/_50sdp"
               android:layout_below="@id/ll2"
               android:layout_margin="@dimen/_5sdp"
               android:background="@drawable/white_bg"
               android:hint="@string/survey_hint"
               android:textColor="@color/headingText"
               android:inputType="textCapSentences|textMultiLine"
               android:paddingStart="@dimen/_10sdp"
               android:paddingEnd="@dimen/_5sdp"
               android:visibility="visible" />

            <View
               android:id="@+id/v1"
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:layout_below="@id/survey_wut"
               android:layout_marginStart="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_4sdp"
               android:layout_marginEnd="@dimen/_10sdp"
               android:layout_marginBottom="@dimen/_10sdp"
               android:background="@color/subHeadingText" />

            <Button
               android:id="@+id/voteBtn"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_30sdp"
               android:layout_below="@id/v1"
               android:background="@drawable/sendto_bg"
               android:text="Submit Vote"
               android:textAllCaps="false"
               android:textColor="#ffffff" />

            <ProgressBar
               android:id="@+id/pb"
               android:layout_width="@dimen/_30sdp"
               android:layout_height="@dimen/_35sdp"
               android:layout_below="@id/v1"
               android:layout_alignTop="@id/voteBtn"
               android:layout_centerHorizontal="true"
               android:layout_marginStart="@dimen/_65sdp"
               android:layout_marginBottom="@dimen/_10sdp"
               android:theme="@style/RedAccent"
               android:visibility="gone" />


         </RelativeLayout>
      </ScrollView>
   </androidx.cardview.widget.CardView>
</RelativeLayout>