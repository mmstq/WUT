<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_marginStart="2dp"
   android:layout_marginEnd="2dp"
   android:foreground="?android:attr/selectableItemBackground"
   android:minHeight="60dp"
   app:cardBackgroundColor="@color/dialogColor"
   app:cardCornerRadius="4dp"
   app:cardElevation="1.5dp"
   app:cardMaxElevation="1.5dp"
   app:cardPreventCornerOverlap="true"
   app:cardUseCompatPadding="true">

   <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:padding="5dp">

      <TextView
         android:id="@+id/upperText"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginStart="3dp"
         android:layout_marginEnd="3dp"
         android:fontFamily="sans-serif-condensed-light"
         android:text="This line is for heading"
         android:textColor="@color/subHeadingText"
         android:textSize="15.5sp"
         android:textStyle="bold" />

      <View
         android:id="@+id/view"
         android:layout_width="match_parent"
         android:layout_height="0.7dp"
         android:layout_marginTop="3dp"
         android:layout_marginBottom="2dp"
         android:layout_below="@id/upperText"
         android:background="@color/headingText" />

      <TextView
         android:id="@+id/lowertext"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginStart="5dp"
      android:layout_marginEnd="5dp"
         android:layout_below="@id/view"
         android:fontFamily="sans-serif"
         android:text="Content"
         android:textColor="@color/headingText"
         android:textSize="15sp" />


   </RelativeLayout>
</androidx.cardview.widget.CardView>